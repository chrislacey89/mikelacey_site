---
import type { Credit, Photo, Interview } from '../../types';
import CinematicCredits from './CinematicCredits.astro';
import PhotoGallery from './PhotoGallery.tsx';
import VideoInterviews from './VideoInterviews.astro';

interface PageContent {
  eyebrow?: string;
  title?: string;
  intro?: string;
  creditsHeading?: string;
  photosHeading?: string;
  videosHeading?: string;
  footer?: {
    heading?: string;
    paragraph?: string;
    ctaLabel?: string;
    ctaHref?: string;
  };
}

interface Props {
  credits: Credit[];
  photos: Photo[];
  interviews: Interview[];
  pageContent?: PageContent;
}

const { credits, photos, interviews, pageContent } = Astro.props;

// Defaults for page content
const eyebrow = pageContent?.eyebrow || 'Portfolio';
const title = pageContent?.title || 'My Work';
const intro = pageContent?.intro || 'Years of television production — from camera operation to directing major sports and entertainment broadcasts.';
const creditsHeading = pageContent?.creditsHeading || 'Production Credits';
const photosHeading = pageContent?.photosHeading || 'Behind the Scenes';
const videosHeading = pageContent?.videosHeading || 'Video Interviews';
const footerHeading = pageContent?.footer?.heading || "Let's Collaborate";
const footerParagraph = pageContent?.footer?.paragraph || "Looking for an experienced director for your next production? I'd love to hear about your project.";
const ctaLabel = pageContent?.footer?.ctaLabel || 'Get in Touch';
const ctaHref = pageContent?.footer?.ctaHref || '/connect';
---

<div class="min-h-screen bg-stone-50 dark:bg-stone-900">
  <!-- Header -->
  <header class="relative py-16 md:py-20 lg:py-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-stone-50 to-amber-50/30 dark:from-stone-900 dark:via-stone-900 dark:to-blue-950/20"></div>
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-amber-600 dark:text-amber-400 font-medium tracking-wide uppercase text-sm mb-4">
        {eyebrow}
      </p>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-stone-900 dark:text-white mb-6 leading-tight">
        {title}
      </h1>
      <p class="text-lg sm:text-xl text-stone-600 dark:text-stone-400 max-w-2xl mx-auto leading-relaxed">
        {intro}
      </p>
    </div>
  </header>

  <!-- Cinematic Credits Section (Full-bleed) -->
  <section class="py-12 md:py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-stone-900 dark:text-white">
        {creditsHeading}
      </h2>
    </div>
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <CinematicCredits credits={credits} />
    </div>
  </section>

  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 space-y-16">
    <!-- Photos Section - Contact Sheet Treatment -->
    <section class="photos-section">
      <div class="section-header">
        <div class="section-badge" aria-hidden="true">
          <span class="badge-icon">◉</span>
        </div>
        <div class="section-title-group">
          <h2 class="section-title">{photosHeading}</h2>
          <p class="section-subtitle">CONTACT SHEET - REVIEW COPY</p>
        </div>
        <div class="section-meta" aria-hidden="true">
          <span class="meta-label">ROLL</span>
          <span class="meta-value">001</span>
        </div>
      </div>
      <PhotoGallery client:visible photos={photos} />
    </section>

    <!-- Videos Section - Broadcast Interview Treatment -->
    <section class="videos-section">
      <div class="videos-header">
        <div class="broadcast-badge" aria-hidden="true">
          <span class="badge-rec">●</span>
          <span class="badge-live">LIVE</span>
        </div>
        <div class="videos-title-group">
          <h2 class="videos-title">{videosHeading}</h2>
          <p class="videos-subtitle">BROADCAST ARCHIVE - ON AIR</p>
        </div>
        <div class="signal-indicator" aria-hidden="true">
          <span class="signal-bar"></span>
          <span class="signal-bar"></span>
          <span class="signal-bar"></span>
          <span class="signal-bar"></span>
        </div>
      </div>
      <VideoInterviews interviews={interviews} />
    </section>
  </main>

  <!-- Footer CTA -->
  <footer class="bg-stone-100 dark:bg-stone-800/50 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-stone-900 dark:text-white mb-4">
        {footerHeading}
      </h2>
      <p class="text-stone-600 dark:text-stone-400 mb-8 max-w-xl mx-auto">
        {footerParagraph}
      </p>
      <a
        href={ctaHref}
        class="inline-block px-8 py-4 bg-blue-600 text-white rounded-lg font-semibold text-base transition-all duration-200 hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-600/25 active:scale-[0.98]"
      >
        {ctaLabel}
      </a>
    </div>
  </footer>
</div>

<style>
  /* Photos Section - Contact Sheet Header */
  .photos-section {
    margin-bottom: 3rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #1a1a1a;
    font-family: var(--font-mono);
  }

  :global(.dark) .section-header {
    border-bottom-color: #444;
  }

  .section-badge {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(180deg, #2a2a2a 0%, #1a1a1a 100%);
    border-radius: 4px;
    flex-shrink: 0;
  }

  .badge-icon {
    color: #d4af37;
    font-size: 1.25rem;
  }

  .section-title-group {
    flex: 1;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    color: #1a1a1a;
    margin: 0;
  }

  :global(.dark) .section-title {
    color: #f5f5f4;
  }

  .section-subtitle {
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: #888;
    margin: 0.25rem 0 0;
  }

  .section-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.125rem;
  }

  .meta-label {
    font-size: 0.55rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: #666;
  }

  .meta-value {
    font-size: 0.9rem;
    font-weight: 700;
    color: #1a1a1a;
  }

  :global(.dark) .meta-value {
    color: #f5f5f4;
  }

  @media (max-width: 640px) {
    .section-header {
      flex-wrap: wrap;
    }

    .section-meta {
      display: none;
    }
  }

  /* Videos Section - Broadcast Header */
  .videos-section {
    margin-top: 2rem;
  }

  .videos-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #1a1a1a;
    font-family: var(--font-mono);
  }

  :global(.dark) .videos-header {
    border-bottom-color: #444;
  }

  .broadcast-badge {
    display: flex;
    align-items: center;
    gap: 6px;
    background: linear-gradient(180deg, #1a1a1a 0%, #0d0d0d 100%);
    padding: 8px 12px;
    border-radius: 4px;
    border-left: 3px solid #ef4444;
    flex-shrink: 0;
  }

  .badge-rec {
    color: #ef4444;
    font-size: 0.6rem;
    animation: pulse-broadcast 1.5s ease-in-out infinite;
  }

  .badge-live {
    font-size: 0.6rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: #ef4444;
  }

  @keyframes pulse-broadcast {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  .videos-title-group {
    flex: 1;
  }

  .videos-title {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    color: #1a1a1a;
    margin: 0;
  }

  :global(.dark) .videos-title {
    color: #f5f5f4;
  }

  .videos-subtitle {
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: #888;
    margin: 0.25rem 0 0;
  }

  .signal-indicator {
    display: flex;
    align-items: flex-end;
    gap: 3px;
    padding: 4px;
  }

  .signal-bar {
    width: 4px;
    background: var(--color-nle-timecode);
    border-radius: 1px;
  }

  .signal-bar:nth-child(1) {
    height: 6px;
  }

  .signal-bar:nth-child(2) {
    height: 10px;
  }

  .signal-bar:nth-child(3) {
    height: 14px;
  }

  .signal-bar:nth-child(4) {
    height: 18px;
  }

  @media (max-width: 640px) {
    .videos-header {
      flex-wrap: wrap;
    }

    .signal-indicator {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .badge-rec {
      animation: none;
    }
  }
</style>
