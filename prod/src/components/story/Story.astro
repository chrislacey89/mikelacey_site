---
import type { TimelineEvent } from '../../types';
import TimelineEra from './TimelineEra.astro';
import NLETimeline from './NLETimeline.astro';

interface PageContent {
  eyebrow?: string;
  title?: string;
  intro?: string;
  footer?: {
    heading?: string;
    paragraph?: string;
    primaryCtaLabel?: string;
    primaryCtaHref?: string;
    secondaryCtaLabel?: string;
    secondaryCtaHref?: string;
  };
}

interface Props {
  timelineEvents: TimelineEvent[];
  pageContent?: PageContent;
}

const { timelineEvents, pageContent } = Astro.props;

// Defaults for page content
const eyebrow = pageContent?.eyebrow || 'The Journey';
const title = pageContent?.title || 'My Story';
const intro = pageContent?.intro || "From the shipping department to the director's chair â€” a career built on passion, perseverance, and making every show the best it can be.";
const footerHeading = pageContent?.footer?.heading || 'Ready to see the work?';
const footerParagraph = pageContent?.footer?.paragraph || 'Explore my portfolio of credits, photos, and interviews from over four decades in television production.';
const primaryCtaLabel = pageContent?.footer?.primaryCtaLabel || 'See My Work';
const primaryCtaHref = pageContent?.footer?.primaryCtaHref || '/work';
const secondaryCtaLabel = pageContent?.footer?.secondaryCtaLabel || 'Get in Touch';
const secondaryCtaHref = pageContent?.footer?.secondaryCtaHref || '/connect';
---

<div class="min-h-screen bg-stone-50 dark:bg-stone-900">
  <!-- Header -->
  <header class="relative py-16 md:py-20 lg:py-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-stone-50 to-amber-50/30 dark:from-stone-900 dark:via-stone-900 dark:to-blue-950/20"></div>
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-amber-600 dark:text-amber-400 font-medium tracking-wide uppercase text-sm mb-4">
        {eyebrow}
      </p>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-stone-900 dark:text-white mb-6 leading-tight">
        {title}
      </h1>
      <p class="text-lg sm:text-xl text-stone-600 dark:text-stone-400 max-w-2xl mx-auto leading-relaxed">
        {intro}
      </p>
    </div>
  </header>

  <!-- NLE Timeline Navigator -->
  <NLETimeline events={timelineEvents} />

  <!-- Timeline -->
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="space-y-0">
      {timelineEvents.map((event, index) => (
        <TimelineEra
          event={event}
          isFirst={index === 0}
          isLast={index === timelineEvents.length - 1}
        />
      ))}
    </div>
  </main>

  <!-- Footer CTAs -->
  <footer class="bg-stone-100 dark:bg-stone-800/50 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-stone-900 dark:text-white mb-4">
        {footerHeading}
      </h2>
      <p class="text-stone-600 dark:text-stone-400 mb-8 max-w-xl mx-auto">
        {footerParagraph}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={primaryCtaHref}
          class="px-8 py-4 bg-blue-600 text-white rounded-lg font-semibold text-base transition-all duration-200 hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-600/25 active:scale-[0.98]"
        >
          {primaryCtaLabel}
        </a>
        <a
          href={secondaryCtaHref}
          class="px-8 py-4 bg-stone-200 dark:bg-stone-700 text-stone-900 dark:text-white rounded-lg font-semibold text-base transition-all duration-200 hover:bg-stone-300 dark:hover:bg-stone-600 active:scale-[0.98]"
        >
          {secondaryCtaLabel}
        </a>
      </div>
    </div>
  </footer>
</div>
