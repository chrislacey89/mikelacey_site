---
import { Image, getImage } from 'astro:assets';
import type { Hero, Profile, CTA } from '../../types';
import headshotImage from '../../assets/images/headshot.jpeg';
import backgroundImage from '../../assets/images/background.jpeg';

interface Props {
  hero: Hero;
  profile: Profile;
  ctas: CTA[];
}

const { hero, profile, ctas } = Astro.props;

// Get optimized background image
const optimizedBg = await getImage({ src: backgroundImage, format: 'webp', quality: 80 });
---

<section class="relative min-h-[calc(100vh-4rem)] flex items-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style={`background-image: url(${optimizedBg.src})`}
  >
    <!-- Gradient overlay - lighter on left to show production rundown -->
    <div class="absolute inset-0 bg-gradient-to-r from-stone-950/70 via-stone-950/60 to-stone-950/50 dark:from-stone-950/80 dark:via-stone-950/70 dark:to-stone-950/60"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Text Content -->
      <div class="order-2 lg:order-1 text-center lg:text-left">
        <!-- Eyebrow -->
        <p class="text-amber-400 font-medium tracking-wide uppercase text-sm mb-4">
          {profile.subtitle}
        </p>

        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold text-white mb-6 leading-tight">
          {hero.headline}
        </h1>

        <!-- Name & Title -->
        <div class="mb-6">
          <p class="text-2xl sm:text-3xl font-semibold text-white">
            {profile.name}
          </p>
          <p class="text-lg text-stone-300">
            {profile.title}
          </p>
        </div>

        <!-- Tagline -->
        <p class="text-lg sm:text-xl text-stone-300 mb-10 max-w-xl mx-auto lg:mx-0 leading-relaxed">
          {hero.tagline}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          {ctas.map((cta) => (
            <a
              href={cta.href}
              class={`
                px-8 py-4 rounded-lg font-semibold text-base transition-all duration-200
                ${cta.variant === 'primary'
                  ? 'bg-blue-600 text-white hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-600/25 active:scale-[0.98]'
                  : 'bg-white/10 text-white border border-white/20 hover:bg-white/20 hover:border-white/30 active:scale-[0.98]'
                }
              `}
            >
              {cta.label}
            </a>
          ))}
        </div>
      </div>

      <!-- Headshot -->
      <div class="order-1 lg:order-2 flex justify-center lg:justify-end">
        <div class="relative">
          <!-- Decorative ring -->
          <div class="absolute -inset-4 rounded-full bg-gradient-to-br from-blue-500/20 to-amber-500/20 blur-xl"></div>

          <!-- Headshot container -->
          <div class="relative w-64 h-64 sm:w-80 sm:h-80 lg:w-96 lg:h-96 rounded-full overflow-hidden border-4 border-white/10 shadow-2xl">
            <Image
              src={headshotImage}
              alt={profile.name}
              width={768}
              height={768}
              format="webp"
              quality={90}
              class="w-full h-full object-cover"
              loading="eager"
            />
            <!-- Subtle inner shadow for depth -->
            <div class="absolute inset-0 rounded-full shadow-inner"></div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!-- Subtle bottom gradient fade -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-stone-950/50 to-transparent pointer-events-none"></div>
</section>
