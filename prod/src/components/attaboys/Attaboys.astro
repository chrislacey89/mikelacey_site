---
import type { Testimonial } from '../../types';
import DocumentGallery from './DocumentGallery.tsx';

interface PageContent {
  eyebrow?: string;
  title?: string;
  intro?: string;
  footer?: {
    heading?: string;
    paragraph?: string;
    ctaLabel?: string;
    ctaHref?: string;
  };
}

interface Props {
  testimonials: Testimonial[];
  pageContent?: PageContent;
}

const { testimonials, pageContent } = Astro.props;

// Defaults for page content
const eyebrow = pageContent?.eyebrow || 'Recognition';
const title = pageContent?.title || 'Attaboys';
const intro = pageContent?.intro || 'Thank-you notes, letters, and recognition from colleagues and industry professionals.';
const footerHeading = pageContent?.footer?.heading || "Let's Create Something Great";
const footerParagraph = pageContent?.footer?.paragraph || "Ready to work with a director who's passionate about making every show the best it can be?";
const ctaLabel = pageContent?.footer?.ctaLabel || 'Get in Touch';
const ctaHref = pageContent?.footer?.ctaHref || '/connect';
---

<div class="min-h-screen bg-stone-50 dark:bg-stone-900">
  <!-- Header -->
  <header class="relative py-16 md:py-20 lg:py-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-stone-50 to-amber-50/30 dark:from-stone-900 dark:via-stone-900 dark:to-blue-950/20"></div>
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-amber-600 dark:text-amber-400 font-medium tracking-wide uppercase text-sm mb-4">
        {eyebrow}
      </p>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-stone-900 dark:text-white mb-6 leading-tight">
        {title}
      </h1>
      <p class="text-lg sm:text-xl text-stone-600 dark:text-stone-400 max-w-2xl mx-auto leading-relaxed">
        {intro}
      </p>
    </div>
  </header>

  <!-- Gallery - Award Presentation Stage -->
  <main class="relative py-12 md:py-16 overflow-hidden">
    <!-- Stage lighting effect -->
    <div class="absolute inset-0 bg-gradient-to-b from-stone-950 via-stone-900 to-stone-950"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_50%_-20%,rgba(212,175,55,0.1),transparent)]"></div>

    <!-- Curtain edges -->
    <div class="absolute top-0 left-0 w-24 h-full bg-gradient-to-r from-stone-950 to-transparent pointer-events-none"></div>
    <div class="absolute top-0 right-0 w-24 h-full bg-gradient-to-l from-stone-950 to-transparent pointer-events-none"></div>

    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section header -->
      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-3 mb-4">
          <div class="h-px w-12 bg-gradient-to-r from-transparent to-amber-500/50"></div>
          <svg class="w-6 h-6 text-amber-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
          </svg>
          <div class="h-px w-12 bg-gradient-to-l from-transparent to-amber-500/50"></div>
        </div>
        <p class="text-amber-400/80 text-sm font-medium tracking-widest uppercase">Hall of Recognition</p>
      </div>

      <DocumentGallery client:visible testimonials={testimonials} />
    </div>
  </main>

  <!-- Footer CTA -->
  <footer class="bg-stone-100 dark:bg-stone-800/50 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-stone-900 dark:text-white mb-4">
        {footerHeading}
      </h2>
      <p class="text-stone-600 dark:text-stone-400 mb-8 max-w-xl mx-auto">
        {footerParagraph}
      </p>
      <a
        href={ctaHref}
        class="inline-block px-8 py-4 bg-blue-600 text-white rounded-lg font-semibold text-base transition-all duration-200 hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-600/25 active:scale-[0.98]"
      >
        {ctaLabel}
      </a>
    </div>
  </footer>
</div>
