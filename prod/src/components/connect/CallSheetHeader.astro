---
interface Props {
  productionTitle?: string;
  date?: string;
}

const { productionTitle = "MIKE LACEY PRODUCTIONS", date } = Astro.props;

// Format current date like a call sheet: "MONDAY, JANUARY 29, 2024"
const today = date || new Date().toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).toUpperCase();
---

<div class="call-sheet-header">
  <div class="header-top">
    <div class="production-info">
      <span class="label">PRODUCTION</span>
      <span class="value">{productionTitle}</span>
    </div>
    <div class="header-badge">
      <span class="badge-text">BOOKING REQUEST</span>
    </div>
    <div class="date-info">
      <span class="label">DATE</span>
      <span class="value">{today}</span>
    </div>
  </div>

  <div class="header-stripe"></div>

  <div class="header-title">
    <div class="film-strip-left" aria-hidden="true">
      <div class="sprocket"></div>
      <div class="sprocket"></div>
      <div class="sprocket"></div>
    </div>
    <h1>PRODUCTION CALL SHEET</h1>
    <div class="film-strip-right" aria-hidden="true">
      <div class="sprocket"></div>
      <div class="sprocket"></div>
      <div class="sprocket"></div>
    </div>
  </div>
</div>

<style>
  .call-sheet-header {
    font-family: var(--font-mono);
    background: var(--color-paper);
    border-bottom: 2px solid #333;
    padding: 1rem 1.5rem 0;
  }

  :global(.dark) .call-sheet-header {
    background: var(--color-paper-dark);
    border-bottom-color: #444;
  }

  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .production-info,
  .date-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .date-info {
    text-align: right;
  }

  .label {
    font-size: 0.6rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: #666;
  }

  :global(.dark) .label {
    color: #888;
  }

  .value {
    font-size: 0.75rem;
    font-weight: 500;
    color: #1a1a1a;
    letter-spacing: 0.05em;
  }

  :global(.dark) .value {
    color: #e5e5e5;
  }

  .header-badge {
    background: linear-gradient(180deg, #2a2a2a 0%, #1a1a1a 100%);
    padding: 0.375rem 1rem;
    border-radius: 4px;
    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .badge-text {
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: #d4af37;
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
  }

  .header-stripe {
    height: 4px;
    background: repeating-linear-gradient(
      90deg,
      #1a1a1a 0px,
      #1a1a1a 8px,
      #d4af37 8px,
      #d4af37 16px
    );
    margin-bottom: 0.75rem;
  }

  :global(.dark) .header-stripe {
    background: repeating-linear-gradient(
      90deg,
      #333 0px,
      #333 8px,
      #d4af37 8px,
      #d4af37 16px
    );
  }

  .header-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding-bottom: 1rem;
  }

  .header-title h1 {
    font-size: 1.25rem;
    font-weight: 700;
    letter-spacing: 0.3em;
    color: #1a1a1a;
    margin: 0;
    text-align: center;
  }

  :global(.dark) .header-title h1 {
    color: #f5f5f4;
  }

  .film-strip-left,
  .film-strip-right {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .sprocket {
    width: 12px;
    height: 8px;
    background: #333;
    border-radius: 2px;
  }

  :global(.dark) .sprocket {
    background: #555;
  }

  @media (max-width: 640px) {
    .call-sheet-header {
      padding: 0.75rem 1rem 0;
    }

    .header-top {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 0.5rem;
    }

    .date-info {
      text-align: center;
    }

    .production-info,
    .date-info {
      order: 1;
    }

    .header-badge {
      order: 0;
      margin-bottom: 0.25rem;
    }

    .header-title h1 {
      font-size: 0.9rem;
      letter-spacing: 0.2em;
    }

    .film-strip-left,
    .film-strip-right {
      display: none;
    }
  }
</style>
