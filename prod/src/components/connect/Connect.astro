---
import type { ContactInfo, ProfessionalLink, FormFields, SectionContent } from '../../types';
import ContactForm from './ContactForm.tsx';
import QRCodeCard from './QRCodeCard.tsx';
import ProfessionalLinks from './ProfessionalLinks.astro';
import CallSheetHeader from './CallSheetHeader.astro';
import BookingStatus from './BookingStatus.astro';
import { generateVCardQR } from '../../utils/qrcode';

interface Props {
  contactInfo: ContactInfo;
  professionalLinks: ProfessionalLink[];
  formFields: FormFields;
  sectionContent: SectionContent;
  formspreeId?: string;
}

const { contactInfo, professionalLinks, formFields, sectionContent, formspreeId } = Astro.props;

// Generate QR code at build time
const qrCodeDataUrl = await generateVCardQR(contactInfo);
---

<div class="connect-page">
  <!-- Call Sheet Header -->
  <CallSheetHeader />

  <main class="connect-main">
    <div class="connect-grid">
      <!-- Contact Form Panel -->
      <div class="form-panel">
        <div class="panel-header">
          <h2>Send a Message</h2>
          <div class="panel-badge">FORM</div>
        </div>
        <div class="panel-content">
          <ContactForm client:load formFields={formFields} formspreeId={formspreeId} />
        </div>
        <div class="panel-footer" aria-hidden="true">
          <div class="footer-line"></div>
          <span class="footer-text">END OF FORM</span>
          <div class="footer-line"></div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="sidebar">
        <!-- Booking Status -->
        <div class="sidebar-section status-section">
          <BookingStatus status="available" />
        </div>

        <!-- QR Code Card (Credential Badge) -->
        <div class="sidebar-section">
          <QRCodeCard client:load contactInfo={contactInfo} qrCodeDataUrl={qrCodeDataUrl} />
        </div>

        <!-- Professional Links -->
        <div class="sidebar-section">
          <div class="links-panel">
            <div class="links-header">
              <span class="links-label">PRODUCTION CONTACTS</span>
            </div>
            <ProfessionalLinks links={professionalLinks} />
          </div>
        </div>

        <!-- Direct Contact Info -->
        <div class="sidebar-section">
          <div class="direct-contact">
            <div class="contact-header">
              <span class="contact-label">DIRECT LINE</span>
            </div>
            <div class="contact-items">
              <a href={`mailto:${contactInfo.email}`} class="contact-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span>{contactInfo.email}</span>
              </a>
              <a href={`tel:${contactInfo.phone}`} class="contact-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>{contactInfo.phoneDisplay}</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Page footer -->
  <footer class="connect-footer" aria-hidden="true">
    <div class="footer-content">
      <span class="page-number">PAGE 1 OF 1</span>
      <span class="confidential">CONFIDENTIAL - FOR PRODUCTION USE ONLY</span>
    </div>
  </footer>
</div>

<style>
  .connect-page {
    min-height: 100vh;
    background: var(--color-paper);
    font-family: var(--font-mono);
  }

  :global(.dark) .connect-page {
    background: var(--color-paper-dark);
  }

  /* Main content */
  .connect-main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .connect-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .connect-grid {
      grid-template-columns: 1fr 380px;
    }
  }

  /* Form Panel */
  .form-panel {
    background: rgba(255, 255, 255, 0.5);
    border: 1px solid var(--color-paper-lines);
  }

  :global(.dark) .form-panel {
    background: rgba(255, 255, 255, 0.02);
    border-color: var(--color-paper-lines-dark);
  }

  .panel-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    border-bottom: 2px solid #1a1a1a;
    background: rgba(0, 0, 0, 0.02);
  }

  :global(.dark) .panel-header {
    border-bottom-color: #444;
    background: rgba(255, 255, 255, 0.02);
  }

  .panel-header h2 {
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: #1a1a1a;
    margin: 0;
    text-transform: uppercase;
  }

  :global(.dark) .panel-header h2 {
    color: #f5f5f4;
  }

  .panel-badge {
    font-size: 0.6rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: #888;
    padding: 0.25rem 0.5rem;
    background: rgba(0, 0, 0, 0.05);
    border-radius: 2px;
  }

  :global(.dark) .panel-badge {
    background: rgba(255, 255, 255, 0.1);
  }

  .panel-content {
    padding: 1.5rem;
  }

  .panel-footer {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    border-top: 1px dashed var(--color-paper-lines);
  }

  :global(.dark) .panel-footer {
    border-top-color: var(--color-paper-lines-dark);
  }

  .footer-line {
    flex: 1;
    height: 1px;
    background: var(--color-paper-lines);
  }

  :global(.dark) .footer-line {
    background: var(--color-paper-lines-dark);
  }

  .footer-text {
    font-size: 0.55rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: #aaa;
  }

  /* Sidebar */
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .sidebar-section {
    /* Container for each sidebar item */
  }

  .status-section {
    display: flex;
    justify-content: center;
  }

  /* Links Panel */
  .links-panel {
    background: rgba(255, 255, 255, 0.5);
    border: 1px solid var(--color-paper-lines);
  }

  :global(.dark) .links-panel {
    background: rgba(255, 255, 255, 0.02);
    border-color: var(--color-paper-lines-dark);
  }

  .links-header {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--color-paper-lines);
    background: rgba(0, 0, 0, 0.02);
  }

  :global(.dark) .links-header {
    border-bottom-color: var(--color-paper-lines-dark);
    background: rgba(255, 255, 255, 0.02);
  }

  .links-label {
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: #666;
  }

  :global(.dark) .links-label {
    color: #a8a29e;
  }

  /* Direct Contact */
  .direct-contact {
    background: linear-gradient(180deg, #1a1a1a 0%, #0d0d0d 100%);
    border-radius: 4px;
    overflow: hidden;
  }

  .contact-header {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #333;
  }

  .contact-label {
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: #d4af37;
  }

  .contact-items {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #fff;
    text-decoration: none;
    font-size: 0.8rem;
    transition: opacity 0.2s ease;
  }

  .contact-item:hover {
    opacity: 0.8;
  }

  .contact-item svg {
    width: 18px;
    height: 18px;
    opacity: 0.6;
  }

  /* Page Footer */
  .connect-footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--color-paper-lines);
    background: rgba(0, 0, 0, 0.02);
  }

  :global(.dark) .connect-footer {
    border-top-color: var(--color-paper-lines-dark);
    background: rgba(255, 255, 255, 0.02);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .page-number,
  .confidential {
    font-size: 0.55rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: #888;
  }

  @media (max-width: 640px) {
    .connect-main {
      padding: 1rem;
    }

    .panel-content {
      padding: 1rem;
    }

    .footer-content {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }
  }
</style>
