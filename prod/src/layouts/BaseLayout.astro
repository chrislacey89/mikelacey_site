---
import MainNav from '../components/shell/MainNav.tsx';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = 'Mike Lacey - Television Director',
  description = '44 years of television directing experience in sports and entertainment production.',
  ogImage
} = Astro.props;

const siteUrl = Astro.url.origin;
const ogImageUrl = ogImage || `${siteUrl}/api/og.png?title=${encodeURIComponent(title)}`;

const currentPath = Astro.url.pathname;

const navItems = [
  { label: 'Home', href: '/', isActive: currentPath === '/' },
  { label: 'Story', href: '/story', isActive: currentPath === '/story' },
  { label: 'Production Credits', href: '/work', isActive: currentPath === '/work' },
  { label: 'Attaboys', href: '/attaboys', isActive: currentPath === '/attaboys' },
  { label: 'Connect', href: '/connect', isActive: currentPath === '/connect' },
];
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content={Astro.url.href} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
  </head>
  <body class="min-h-screen bg-stone-50 dark:bg-stone-950 text-stone-900 dark:text-stone-100">
    <MainNav
      client:load
      brandName="Mike Lacey"
      items={navItems}
    />
    <main>
      <slot />
    </main>
  </body>
</html>
