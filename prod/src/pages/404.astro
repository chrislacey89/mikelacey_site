---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found | Mike Lacey" description="The page you're looking for doesn't exist or has been moved.">
  <section class="relative min-h-[calc(100vh-4rem)] flex items-center justify-center overflow-hidden">
    <!-- Background gradient -->
    <div class="absolute inset-0 bg-gradient-radial from-stone-900 to-stone-950"></div>

    <!-- 404 Watermark -->
    <div class="absolute inset-0 flex items-center justify-center pointer-events-none select-none" aria-hidden="true">
      <span class="text-[20rem] sm:text-[25rem] lg:text-[30rem] font-mono font-bold text-stone-900/50 leading-none">
        404
      </span>
    </div>

    <!-- Content -->
    <div class="relative z-10 w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center">
      <!-- Director's Slate SVG -->
      <div class="slate-container mb-8 inline-block" aria-hidden="true">
        <svg viewBox="0 0 280 200" class="w-64 sm:w-80 h-auto mx-auto" xmlns="http://www.w3.org/2000/svg">
          <!-- Slate body -->
          <rect x="10" y="60" width="260" height="130" rx="4" fill="#1c1917" stroke="#44403c" stroke-width="2"/>

          <!-- Clapstick top (animated) -->
          <g class="clapstick" transform-origin="10 60">
            <polygon points="10,60 270,60 270,40 30,40" fill="#1c1917" stroke="#44403c" stroke-width="2"/>
            <!-- Diagonal stripes on clapstick -->
            <g clip-path="url(#clapClip)">
              <rect x="10" y="35" width="20" height="30" fill="#fbbf24"/>
              <rect x="50" y="35" width="20" height="30" fill="#fbbf24"/>
              <rect x="90" y="35" width="20" height="30" fill="#fbbf24"/>
              <rect x="130" y="35" width="20" height="30" fill="#fbbf24"/>
              <rect x="170" y="35" width="20" height="30" fill="#fbbf24"/>
              <rect x="210" y="35" width="20" height="30" fill="#fbbf24"/>
              <rect x="250" y="35" width="20" height="30" fill="#fbbf24"/>
            </g>
          </g>

          <!-- Bottom stripes (static) -->
          <g clip-path="url(#bottomClip)">
            <rect x="10" y="55" width="20" height="15" fill="#fbbf24"/>
            <rect x="50" y="55" width="20" height="15" fill="#fbbf24"/>
            <rect x="90" y="55" width="20" height="15" fill="#fbbf24"/>
            <rect x="130" y="55" width="20" height="15" fill="#fbbf24"/>
            <rect x="170" y="55" width="20" height="15" fill="#fbbf24"/>
            <rect x="210" y="55" width="20" height="15" fill="#fbbf24"/>
            <rect x="250" y="55" width="20" height="15" fill="#fbbf24"/>
          </g>

          <!-- Clip paths -->
          <defs>
            <clipPath id="clapClip">
              <polygon points="10,60 270,60 270,35 30,35"/>
            </clipPath>
            <clipPath id="bottomClip">
              <rect x="10" y="55" width="260" height="15"/>
            </clipPath>
          </defs>

          <!-- Slate text fields -->
          <g font-family="'IBM Plex Mono', monospace" fill="#a8a29e">
            <!-- Scene -->
            <text x="25" y="95" font-size="10" text-transform="uppercase">SCENE</text>
            <text x="25" y="115" font-size="16" fill="#fafaf9" font-weight="bold">NOT FOUND</text>

            <!-- Take -->
            <text x="160" y="95" font-size="10">TAKE</text>
            <text x="160" y="115" font-size="16" fill="#fafaf9" font-weight="bold">404</text>

            <!-- Director -->
            <text x="25" y="145" font-size="10">DIRECTOR</text>
            <text x="25" y="165" font-size="14" fill="#fafaf9" font-weight="bold">MIKE LACEY</text>

            <!-- Date -->
            <text x="160" y="145" font-size="10">DATE</text>
            <text x="160" y="165" font-size="14" fill="#fafaf9" font-weight="bold" id="slate-date">--/--/----</text>
          </g>
        </svg>
      </div>

      <!-- Headline -->
      <h1 class="headline text-3xl sm:text-4xl lg:text-5xl font-bold text-stone-100 mb-4">
        This scene didn't make the cut.
      </h1>

      <!-- Subtext -->
      <p class="subtext text-lg text-stone-400 mb-10 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved to another production.
      </p>

      <!-- CTAs -->
      <div class="ctas flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="px-8 py-4 rounded-lg font-semibold text-base transition-all duration-200 bg-blue-600 text-white hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-600/25 active:scale-[0.98]"
        >
          Back to Home
        </a>
        <a
          href="/work"
          class="px-8 py-4 rounded-lg font-semibold text-base transition-all duration-200 bg-white/10 text-white border border-white/20 hover:bg-white/20 hover:border-white/30 active:scale-[0.98]"
        >
          View My Work
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Radial gradient background */
  .bg-gradient-radial {
    background: radial-gradient(ellipse at center, #1c1917 0%, #0c0a09 100%);
  }

  /* Slate clap animation */
  .clapstick {
    animation: clap 0.5s ease-out 0.2s both;
  }

  @keyframes clap {
    0% {
      transform: rotate(-25deg);
    }
    70% {
      transform: rotate(2deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }

  /* Staggered fade-in animations */
  .slate-container {
    opacity: 0;
    animation: fadeIn 0.6s ease-out 0.1s forwards;
  }

  .headline {
    opacity: 0;
    animation: fadeIn 0.6s ease-out 0.4s forwards;
  }

  .subtext {
    opacity: 0;
    animation: fadeIn 0.6s ease-out 0.5s forwards;
  }

  .ctas {
    opacity: 0;
    animation: fadeIn 0.6s ease-out 0.6s forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .clapstick,
    .slate-container,
    .headline,
    .subtext,
    .ctas {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>

<script>
  // Set dynamic date on the slate
  const dateElement = document.getElementById('slate-date');
  if (dateElement) {
    const now = new Date();
    const month = String(now.getMonth() + 1).padStart(2, '0');
    const day = String(now.getDate()).padStart(2, '0');
    const year = now.getFullYear();
    dateElement.textContent = `${month}/${day}/${year}`;
  }
</script>
